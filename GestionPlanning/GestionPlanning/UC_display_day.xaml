<UserControl x:Class="GestionPlanning.UC_display_day"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionPlanning"
             mc:Ignorable="d" Width="950" Height="560">
    <Grid>
        <Rectangle Fill="#FF2E2E2E" Margin="0,0,0,0" Stroke="Black" StrokeThickness="0"/>
        <ScrollViewer HorizontalAlignment="Left" Height="433" Margin="54,61,0,0" VerticalAlignment="Top" Width="823" Padding="0" UseLayoutRounding="True" BorderBrush="Black" >
            <StackPanel x:Name="StackPanelDisplayDay" HorizontalAlignment="Left" Height="433" VerticalAlignment="Top" Width="813"/>
        </ScrollViewer>
        <Button x:Name="btnPreviousDay" Content="Jour précedent" HorizontalAlignment="Left" Margin="72,27,0,0" VerticalAlignment="Top" Width="93" Click="Btn_PreviousDay"/>
        <Button x:Name="btnNextDay" Content="Jour suivant" HorizontalAlignment="Left" Margin="762,27,0,0" VerticalAlignment="Top" Width="93" Click="Btn_NextDay"/>
        <TextBlock x:Name="TextDay" HorizontalAlignment="Left" Margin="370,21,0,0" TextWrapping="Wrap" Text="Jour" VerticalAlignment="Top" FontSize="24" Foreground="White" Width="190" TextAlignment="Center"/>

    </Grid>
</UserControl>
