<Window x:Class="GestionPlanning.Window_Modif_Colors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionPlanning"
        mc:Ignorable="d"
        Title="Window_Modif_Colors" Height="400" Width="354">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="67,10,0,0" TextWrapping="Wrap" Text="Modification des revêtements" VerticalAlignment="Top" Width="176"/>
        <Button Content="Ajouter revêtement" HorizontalAlignment="Left" Margin="56,298,0,0" VerticalAlignment="Top" Width="132" Height="24" Click="ClickAddColor"/>
        <TextBlock x:Name="textNbColors" HorizontalAlignment="Left" Margin="228,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="72"><Run Text="x"/><Run Text="/10"/></TextBlock>

        <ScrollViewer HorizontalAlignment="Left" Height="250" VerticalAlignment="Top" Width="300" Margin="22,43,0,0">
            <StackPanel x:Name="StackPanelDisplayRevetements" HorizontalAlignment="Left" Height="248" VerticalAlignment="Top" Width="300"/>
        </ScrollViewer>
        <Button x:Name="btnLeave" Content="Quitter" HorizontalAlignment="Left" Margin="126,339,0,0" VerticalAlignment="Top" Width="75" Click="CancelModif"/>

    </Grid>
</Window>
